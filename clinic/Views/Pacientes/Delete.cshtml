@model clinic.Models.Paciente

@{
    ViewData["Title"] = "Delete";
}

<div class="card p-4 mt-3">

    <div class="row">
        <div class="col-md-6">
            <h4>Deletar Paciente</h4>
            <p class="text-danger">
                Deseja deletar paciente?
            </p>
        </div>
    </div>


    <div class="row mt-2">

        <div class="col-md-8">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" disabled />
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Convenio" class="control-label"></label>
                <input asp-for="Convenio" class="form-control" disabled />
            </div>
        </div>

    </div>

    <div class="row">
        <div class="col-md-2">
            <div class="form-group">
                <label asp-for="DataNascimento" class="control-label"></label>
                <input asp-for="DataNascimento" class="form-control" disabled />
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="Genero" class="control-label"></label>
                <input asp-for="Genero" class="form-control" disabled />
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" class="form-control" disabled />
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" disabled />
            </div>
        </div>
    </div>

    <div class="row mt-2">
        <div class="col-md-12">

            <div class="form-group">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" style="float: right" value="Deletar Paciente" class="btn btn-danger" /> 
                </form>
            </div>

        </div>

    </div>

</div>
    
    

