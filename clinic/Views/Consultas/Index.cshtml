@model IEnumerable<clinic.Models.Consulta>

@{
    ViewData["Title"] = "Index";
}

<div class="card p-4 mt-3">


<div class="row">
    <div class="col-md-6">
        <h4>Listagem de Consulta</h4>
    </div>
    <div class="col-md-6">
        <a asp-action="Create" class="btn btn-primary float-right"><i class="fa-solid fa-notes-medical"></i> Nova Consulta</a>
    </div>
</div>


<div class="row mt-2">
    <div class="col-md-12">
<table class="table">
                <thead>
                    <tr>
                        <th>
                            Paciente
                        </th>
                        <th>
                            Data da Consulta
                        </th>
                        <th>
                            Data Retorno
                        </th>
                        <th>
                            Status
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Paciente.Nome)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DataHoraConsulta)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DataHoraRetorno)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>

                            <td>
                                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">
                                    <i class="fa-solid fa-edit"></i>
                                </a>
                                <a class="btn btn-info text-white" asp-action="Details" asp-route-id="@item.Id">
                                    <i class="fa-solid fa-circle-info"></i>
                                </a>
                                <a class="btn btn-dark" asp-action="Delete" asp-route-id="@item.Id">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
</table>
</div>
    </div>
</div>